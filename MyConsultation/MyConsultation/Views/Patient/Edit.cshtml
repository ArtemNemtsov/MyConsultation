@{
ViewData["Title"] = "Редктирование пациента";
@model DBContext.Models.Patient
}
<head>

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script src="~/js/EditPatient.js"></script>

    <style>
        .content {
            width: 250px;
            margin-top: 100px;
        }
    </style>
</head>

<body>
    <div class="content">

        <form id="idForm" asp-action="Update" asp-route-idPatient="@Model.IdPatient">
         
            <p>
                <input name="IdPatient" id="IdPatient" value="@(Model?.IdPatient)" type="hidden">
            </p>
            
            <p>
                <input type="text" name="Surname" value="@(Model?.Surname)" class="form-control" placeholder="Фамилия" minlength="3" maxlength="30" required autofocus>
            </p>

            <p>
                <input type="text" name="Name" value="@(Model?.Name)" class="form-control" minlength="3" maxlength="30" placeholder="Имя" required>
            </p>

            <p>
                <input type="text" name="MiddleName" value="@(Model?.MiddleName)" class="form-control" minlength="3" maxlength="30" placeholder="Отчество">
            </p>

            <p>
                <input asp-for="Birthdate" name="Birthdate" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" max=@DateTime.Today.Date required />
            </p>

            <p>
                <div class="custom-control custom-radio">
                    @Html.RadioButtonFor(model => model.Gender, "M", true)
                    <span>Мужской</span> <br />
                    @Html.RadioButtonFor(model => model.Gender, "Ж")
                    <span>Женский</span> <br />
                </div>
            </p>

            <p>
                <input type="text" id="idSnils" name="Snils" value="@(Model?.Snils)" class="form-control" placeholder="СНИЛС" minlength="14" maxlength="14" required>
            </p>

            <p>
                <h5 id="idInformation" ;></h5>
            </p>

            <h4>@ViewBag.Information</h4>

            <p>
                <input class="btn btn-outline-danger" type="reset" value="Очистить" />
                <input class="btn btn-primary" type="submit" value="Сохранить" />
            </p>
        </form>
    </div>

    <a class="btn btn-primary" href="~/Patient/Journal"> Назад </a>


    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>

    <script>$('#idSnils').mask('000-000-000 00');</script>
</body>
