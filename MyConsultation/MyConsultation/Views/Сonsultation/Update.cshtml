@model DBContext.Models.Сonsultation

@{
    ViewData["Title"] = "Новая консультанция";
}

<head>

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>

    <style>
        .content {
            width: 350px;
            margin-top: 100px;
        }
    </style>
</head>

<body>

    <div class="content">
        <form id="idForm" method="post" asp-action="Update">

            <p>
                <input name="IdConsultation" id="IdConsultation" value="@(Model?.IdConsultation)" type="hidden">
            </p>

            <p>
                <div class="form-group">
                    <select asp-for="@Model.IdPatient" class="form-control" asp-items="ViewBag.Patiens" required>
                        <option value="@Model.IdPatient"></option>
                    </select>
                    <span asp-validation-for="@Model.IdPatient" class="text-danger" />
                </div>
            </p>

            <p>
                <input asp-for="Date" name="Date" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" required />
            </p>

            <p>
                <input type="time" id="Time" name="Time" value="@Model?.Time" class="form-control" required>
            </p>


            <p>
                <textarea name="Symptoms" rows="10" placeholder="Симптомы" style="width: 100%; max-width: 100%;">@Model?.Symptoms</textarea>
            </p>



            <h4>@ViewBag.Information</h4>

            <p>
                <input class="btn btn-outline-danger" type="reset" value="Очистить" />
                <input class="btn btn-primary" type="submit" value="Сохранить" />
            </p>
        </form>
    </div>
    <a class="btn btn-primary" href="~/Сonsultation/Journal"> Назад </a>


    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
</body>
