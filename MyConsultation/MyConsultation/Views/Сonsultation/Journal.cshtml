@model IEnumerable<ConsultationService.PageModels.ConsultationJournalModel>

@{
    ViewData["Title"] = "Консультанции";
}

<head>
    <style>
        .patient {
            margin-top: 100px;
        }
    </style>
</head>


<div class="patient">

    <table class="table" }>

        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Patient)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Time)
                </th>
                <th></th>
            </tr>
        </thead>     

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patient)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
    
                    <td>
                        <a asp-action="Update" class="btn btn-outline-warning" asp-route-idConsultation="@item.IdConsultation">Редактировать</a>
                        <a asp-action="Delete" class="btn btn-outline-danger" asp-route-idConsultation="@item.IdConsultation">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



